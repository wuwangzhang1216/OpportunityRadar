# Application Settings
APP_NAME=OpportunityRadar
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/opportunity_radar
DATABASE_ECHO=false

# Redis (use port 6380 if 6379 is occupied by another project)
REDIS_URL=redis://localhost:6380/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# Scraper Settings
SCRAPER_DEVPOST_ENABLED=true
SCRAPER_MLH_ENABLED=true
SCRAPER_INTERVAL_HOURS=6
SCRAPER_REQUEST_DELAY_SECONDS=2

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
