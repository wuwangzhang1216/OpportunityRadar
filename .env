# Application Settings
APP_NAME=OpportunityRadar
APP_ENV=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=opportunity_radar

# Redis (use port 6380 - Docker container maps 6380->6379)
REDIS_URL=redis://localhost:6380/0

# JWT Settings
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# Scraper Settings
SCRAPER_DEVPOST_ENABLED=true
SCRAPER_MLH_ENABLED=true
SCRAPER_INTERVAL_HOURS=6
SCRAPER_REQUEST_DELAY_SECONDS=2

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8001"]
